// firestore.rules - قواعد حماية مؤقتة للاختبار
// ⚠️ هذه قواعد اختبار - لا تستخدمها في الإنتاج!

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // قواعد اختبار مؤقتة - السماح للجميع (للاختبار فقط)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
